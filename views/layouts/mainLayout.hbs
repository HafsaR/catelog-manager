<script type="text/javascript">

$(document).ready(function(){
    $('#delete').click( e => {
        alert('delete');
        $target = $(e.target);
      
        const delID = $target.attr('data-name');
         $.ajax({
            'url' : `/catelog/delete/${delID}`,
            'type' : 'DELETE',
       
        error: function() {
                       alert('Error');
                    },
                    success : function(data) {
                       if (data == "success") {
                            alert('record deleted!');
                            window.location.reload(true);
                       }
                    }
        });
        
    });

});
</script>



